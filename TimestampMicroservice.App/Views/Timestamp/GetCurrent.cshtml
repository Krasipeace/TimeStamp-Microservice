@model TimeStampViewModel
@{
    ViewData["Title"] = GetCurrentViewTitle;
}

<h2 class="text-center">Current Unix Timestamp, Date and Local time</h2>

<hr />

<div class="row">
    <div class="text-center">
        @if (Model != null)
        {
            <p class="text-center">
                Unix Time: <span class="fw-bold">@Model.Unix</span>
                <a href="" class="copy-btn" data-copy-value="@Model.Unix">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black" class="bi bi-copy" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M4 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 5a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1h1v1a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h1v1z" />
                    </svg>
                </a>
                <input type="text" value="@Model.Unix" id="unixInput" style="display:none;">
            </p>
            <p class="text-center">UTC Time: <span class="fw-bold">@Model.Utc</span></p>
            <p class="text-center">Local Time: <span class="fw-bold">@Model.Local</span> <span class="fw-bolder">*</span></p>

            <p class="text-center">
                <a href="/Timestamp/GetCurrent">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="purple" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z" />
                        <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466" />
                    </svg>
                </a>
            </p>
        }
        else
        {
            <div class="text-center">
                <div class="spinner-border text-info" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
    </div>
</div>

<footer class="text-center">
    <p>* - Specific environments like Docker Containers etc., will need a setup to make local time work properly.</p>
</footer>

@section Scripts {
    <script src="~/js/site.js"></script>
    <script>copyUnix();</script>
}
